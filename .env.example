# =============================================================================
# LiDAR Forest Analysis Platform - Environment Configuration
# =============================================================================
# Copy this file to .env and update values for your environment:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# =============================================================================
# Database Configuration (PostgreSQL with PostGIS)
# =============================================================================
POSTGRES_USER=lidar
POSTGRES_PASSWORD=lidar_dev_password
POSTGRES_DB=lidar_forest
POSTGRES_PORT=5432

# Full database URL (override if using external database)
DATABASE_URL=postgresql://lidar:lidar_dev_password@localhost:5432/lidar_forest

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# =============================================================================
# S3-Compatible Storage (MinIO for local, AWS S3 for production)
# =============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=lidar-uploads
S3_REGION=us-east-1

# MinIO Console Credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# =============================================================================
# Authentication & Security
# =============================================================================
# IMPORTANT: Change these in production!
JWT_SECRET=your_jwt_secret_change_in_production_min_32_characters
JWT_EXPIRES_IN=7d

# =============================================================================
# Processing Service Configuration
# =============================================================================
PROCESSING_PORT=8000
PROCESSING_WORKERS=4
MAX_UPLOAD_SIZE_MB=500
LOG_LEVEL=INFO

# =============================================================================
# Backend API Configuration
# =============================================================================
BACKEND_PORT=4000
NODE_ENV=development

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:4000
VITE_PROCESSING_URL=http://localhost:8000

# =============================================================================
# Development Tools (only active with --profile dev)
# =============================================================================
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# =============================================================================
# Docker Build Targets (development or production)
# =============================================================================
PROCESSING_TARGET=production
BACKEND_TARGET=production
FRONTEND_TARGET=production
