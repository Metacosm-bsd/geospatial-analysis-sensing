# LiDAR Forest Analysis Platform - Backend Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# Database Configuration (PostgreSQL with PostGIS)
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/lidar_forest?schema=public

# =============================================================================
# Redis Configuration (for BullMQ job queues)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Generate secure random strings for production!
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# File Storage Configuration
# =============================================================================
# Storage type: 'local' for development, 's3' for production
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
STORAGE_BASE_URL=http://localhost:3000
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=1073741824
# Chunk size for multipart uploads (default: 10MB)
CHUNK_SIZE=10485760

# =============================================================================
# AWS S3 Configuration (required if STORAGE_TYPE=s3)
# =============================================================================
AWS_S3_BUCKET=
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# Optional: For S3-compatible services like MinIO or LocalStack
AWS_S3_ENDPOINT=
AWS_S3_FORCE_PATH_STYLE=false

# =============================================================================
# Processing Service Configuration
# =============================================================================
PROCESSING_SERVICE_URL=http://localhost:8000

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
